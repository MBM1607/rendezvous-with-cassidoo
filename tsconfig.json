{
  "compilerOptions": {
    // type checking
    "strict": true,
    "allowUnreachableCode": false,
    "allowUnusedLabels": false,
    "noFallthroughCasesInSwitch": true,
    "noImplicitAny": true,
    "noImplicitOverride": true,
    "noImplicitThis": true,
    // TODO Turn it on after replacing jest with vitest & fixing all the errors
    // "noUncheckedIndexedAccess": true,
    "strictFunctionTypes": true,
    "strictBindCallApply": true,
    "strictNullChecks": true,
    "strictPropertyInitialization": true,
    "useUnknownInCatchVariables": true,
    "noUnusedLocals": false,
    "noUnusedParameters": false,

    // modules
    // TODO Turn it on after replacing jest with vitest and switch moduleResolution to NodeNext
    // "module": "NodeNext",
    "moduleResolution": "Node",
    "resolveJsonModule": true,

    // emit
    "downlevelIteration": true,
    "noEmit": true,

    // javascript support
    "allowJs": true,
    "checkJs": true,

    // interop constraints
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "isolatedModules": true,
    // TODO Turn it on after replacing jest with vitest
    // "verbatimModuleSyntax": true,

    // language and environment
    "lib": ["ES2022", "ESNext.Array"],
    "target": "ES2022",
    "moduleDetection": "force",

    // output formatting
    "noErrorTruncation": true,

    // completeness
    "skipLibCheck": true
  },
  "include": ["**/*", "**/*.*.cjs"],
  "exclude": ["node_modules", "build", "dist", "coverage", "public"]
}
